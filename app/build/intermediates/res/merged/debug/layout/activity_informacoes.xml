<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="Informações sobre as leis" />

    <Button
        android:id="@+id/infOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:text="Violência doméstica e familiar - disposições gerais" />

    <Button
        android:id="@+id/infTwo"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Assistência a mulher em situação de violência"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/infthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Procedimentos - Disposições Gerais"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btnfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Medidas protetivas de urgência à vítima"
        android:background="@android:color/transparent"/>


</LinearLayout>